{
  "name": "simple-example",
  "private": true,
  "type": "module",
  "version": "1.0.1",
  "displayName": "Simple Example",
  "description": "Exemplo simples de uso do TS API Core com roteamento e validação.",
  "openapi": {
    "info": {
      "termsOfService": "https://example.com/terms",
      "contact": {
        "name": "TS API Kit Team",
        "url": "https://github.com/ts-api-kit/ts-api-kit",
        "email": "contact@devzolo.com"
      },
      "license": {
        "name": "MIT",
        "url": "https://opensource.org/licenses/MIT"
      }
    },
    "tags": [
      {
        "name": "health",
        "description": "Healthcheck e diagnósticos"
      },
      {
        "name": "users",
        "description": "Operações de usuário (exemplo)"
      }
    ],
    "externalDocs": {
      "url": "https://github.com/ts-api-kit/ts-api-kit",
      "description": "Repositório e documentação do projeto"
    },
    "components": {
      "securitySchemes": {
        "bearerAuth": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      }
    },
    "extensions": {
      "x-logo": {
        "url": "https://www.valuehost.com.br/blog/wp-content/uploads/2024/07/api.jpeg.webp",
        "altText": "TS API Kit"
      }
    }
  },
  "scripts": {
    "dev": "node --env-file=.env --watch --loader @ts-api-kit/core/node --experimental-transform-types --no-warnings src/index.ts",
    "dev:node": "node --env-file=.env --watch --experimental-transform-types --no-warnings src/index.ts",
    "dev:bun": "bun --watch src/index.ts",
    "dev:deno": "deno run -A --watch src/index.ts",
    "build": "tsc",
    "build:bun": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile app src/index.ts",
    "start": "node dist/index.js",
    "lint": "cd ../../ && biome check examples/simple-example",
    "lint:fix": "cd ../../ && biome check examples/simple-example --write",
    "format": "cd ../../ && biome format examples/simple-example",
    "format:fix": "cd ../../ && biome format examples/simple-example --write",
    "check": "tsgo --skipLibCheck"
  },
  "imports": {
    "#/*": "./src/*"
  },
  "dependencies": {
    "@kitajs/html": "^4.2.9",
    "@ts-api-kit/compiler": "workspace:*",
    "@ts-api-kit/core": "workspace:*",
    "hono": "^4.9.8",
    "valibot": "^1.1.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "typescript": "^5.9.2"
  }
}