{
	"name": "workspace",
	"private": true,
	"type": "module",
	"author": "devzolo <contact@devzolo.com>",
	"license": "MIT",
	"repository": "https://github.com/ts-api-kit/ts-api-kit",
	"workspaces": [
		"docs",
		"apps/*",
		"packages/*",
		"examples/*"
	],
	"scripts": {
		"dev": "nx run-many -t dev",
		"build": "nx run-many -t build",
		"clean": "nx run-many -t clean",
		"lint": "nx run-many -t lint",
		"lint:fix": "nx run-many -t lint:fix",
		"format": "nx run-many -t format",
		"format:fix": "nx run-many -t format:fix",
		"test": "nx run-many -t test",
		"check": "nx run-many -t check",
		"changeset": "changeset",
		"release:version": "changeset version && node scripts/sync-jsr-versions.mjs",
		"sync:jsr-versions": "node scripts/sync-jsr-versions.mjs",
		"release:publish": "pnpm publish:jsr",
		"release:verify": "pnpm build && pnpm test && pnpm lint && node scripts/sync-jsr-versions.mjs --check && pnpm release:dry-run",
		"release:dry-run": "pnpm build && pnpm -r --filter=\"@ts-api-kit/*\" exec jsr publish --dry-run --allow-slow-types",
		"release": "pnpm release:version && pnpm -r install --no-frozen-lockfile && pnpm release:publish",
		"publish:jsr": "pnpm build && pnpm -r --filter=\"@ts-api-kit/*\" exec jsr publish --allow-slow-types",
		"publish:core": "cd packages/core && npx jsr publish --allow-slow-types",
		"publish:compiler": "cd packages/compiler && npx jsr publish --allow-slow-types"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.8",
		"@biomejs/biome": "^2.2.2",
		"@typescript/native-preview": "7.0.0-dev.20250907.1",
		"nx": "21.4.1",
		"typescript": "^5.6.2"
	},
	"engines": {
		"npm": ">=8.0.0",
		"node": ">=20.0.0"
	},
	"packageManager": "pnpm@10.15.1+sha512.34e538c329b5553014ca8e8f4535997f96180a1d0f614339357449935350d924e22f8614682191264ec33d1462ac21561aff97f6bb18065351c162c7e8f6de67",
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"nx"
		]
	}
}
